<?xml version="1.0" encoding="UTF-8"?>
<fileValidationRules functionName="Control" columnCount="3" delimiter="|" allowedExtentions="*.dat">
	<inputColumn columnId="1" columnName="FILENAME" duplicate="true" order="0" dataType="String" notNull="true" regex="([0-9a-zA-Z_.]+)">
	<errorMessages>
		<entry>
			<key>NOT_NULL_INVALID</key>
			<value>FILENAME cannot be blank or null</value>
		</entry>
		<entry>
			<key>DATATYPE_INVALID</key>
			<value>FILENAME should be in a valid format</value>
		</entry>
		</errorMessages>
	</inputColumn>
	
	<inputColumn columnId="2" columnName="NO.OF RECORDS" duplicate="false" order="1" dataType="Integer" notNull="true">
		<errorMessages>
		<entry>
			<key>NOT_NULL_INVALID</key>
			<value>NO.OF RECORDS cannot be blank or null</value>
		</entry>
		<entry>
			<key>DATATYPE_INVALID</key>
			<value>NO.OF RECORDS should be in a valid number</value>
		</entry>
		</errorMessages>
	</inputColumn>
	
	<inputColumn columnId="3" columnName="DATADATE" duplicate="false" order="2" dataType="Integer" notNull="true">
		<errorMessages>
		<entry>
			<key>NOT_NULL_INVALID</key>
			<value>DATADATE cannot be blank or null</value>
		</entry>
		<entry>
			<key>DATATYPE_INVALID</key>
			<value>DATADATE should be in a valid YYYYMMDD format</value>
		</entry>
		</errorMessages>
	</inputColumn>
	
	<errorMessages>
		<entry>
			<key>CLMN_COUNT_MISMATCH</key>
			<value>Column Count is not 3 for row {}</value>
		</entry>
		<entry>
			<key>HEADER_INVALID</key>
			<value>Header Value is invalid</value>
		</entry>
		<entry>
			<key>DUPLICATE_ROW</key>
			<value>Duplicate row for row {}</value>
		</entry>
		<entry>
			<key>DATATYPE_INVALID</key>
			<value>Data type is not valid for row {}</value>
		</entry>
	</errorMessages>
</fileValidationRules>