	<bean id="optimaRetailDataException"
		class="com.citi.retail.optima.etl.common.exception.OptimaRetailDataException">
		<constructor-arg index="0" value="AGGREGATION"/>
		<constructor-arg index="1" value="ERROR"/>
		<property name="rowId" value="100" />
