<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
							http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
							http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- Register Annotation-based Post Processing Beans -->
	<context:annotation-config />
	
	<bean id="validationRulesHolder"
		class="com.citi.retail.optima.etl.validation.ValidationRulesLoader"
		p:validationRulesDao-ref="validationRulesDao"  />

	<bean id="validationRulesDao"
		class="com.citi.retail.optima.etl.validation.dao.impl.ValidationRulesDaoImpl"
		p:jdbcTemplate-ref="jdbcTemplate" />
		
	<bean id="spelidator"
		class="com.citi.retail.optima.etl.validation.validator.impl.SPELidator"/>
		
	<bean id="validationEvaluationContext"
		class="com.citi.retail.optima.etl.validation.support.ValidationCustomEvaluationContext"		
		init-method="init" />
			
</beans>