<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd">


<batch:job id="syncDbJobId" restartable="true" >
	
	<!-- Read mysql db and create data dump file for backup -->
	<batch:step id="printBatchDetailsForSupport" >
		<batch:tasklet ref="printSyncDbJobDetails" transaction-manager="dbTxManager">
			<batch:listeners>
				<batch:listener ref="commonStepExecutionListner" />
			</batch:listeners>
		</batch:tasklet>	
	</batch:step>	
</batch:job>

<bean id="printSyncDbJobDetails" class="org.dms.batch.tasklets.PrintSyncDbJobDetails"/>

</beans>
