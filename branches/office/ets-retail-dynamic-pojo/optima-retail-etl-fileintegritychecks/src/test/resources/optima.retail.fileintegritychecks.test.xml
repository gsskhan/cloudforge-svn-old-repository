<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:c="http://www.springframework.org/schema/c"
		xmlns:p="http://www.springframework.org/schema/p"		
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:util="http://www.springframework.org/schema/util"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="
				http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
				http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- Register Annotation-based Post Processing Beans -->
	<context:annotation-config />
	
	<bean id="fileintegrityProperties"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>        
        <property name="locations">
            <list>
                <value>classpath:optima.retail.fileintegrity.test.properties</value>
            </list>
        </property>
    </bean>
      
	<bean id="fileIntegrityServiceFactory" 
		  class="com.citi.retail.optima.etl.fileintegrity.impl.FileIntegrityServiceFactoryImpl"
		  p:fileIntegrityRulesLoader-ref="fileIntegrityRulesLoader"
	/>
	
	<bean id="fileIntegrityRulesLoader"
		class="com.citi.retail.optima.etl.fileintegrity.FileIntegrityRulesLoader"
		p:fileIntegrityRulesDao-ref="fileIntegrityRulesDao"  />
	
	<bean	id="fileIntegrityRulesDao" 
			class="com.citi.retail.optima.etl.fileintegrity.dao.impl.FileIntegrityRulesDaoImpl"
			p:ruleFileNames="${filescanner.rules.fileNames}"			
			
	/>	
	
	<bean id="fileIntegrityServiceCcar" factory-bean="fileIntegrityServiceFactory" factory-method="createFileIntegrityService"
				c:_0="CCAR" />
				
	<bean id="fileIntegrityServiceFdic" factory-bean="fileIntegrityServiceFactory" factory-method="createFileIntegrityService"
				c:_0="FDIC" />
				
	<bean id="fileIntegrityServiceSuppl"  factory-bean="fileIntegrityServiceFactory" factory-method="createFileIntegrityService"
				c:_0="SUPPLEMANTARY" />
		
</beans>