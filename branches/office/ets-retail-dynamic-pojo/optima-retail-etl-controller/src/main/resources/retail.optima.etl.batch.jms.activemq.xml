<?xml version="1.0" encoding="UTF-8" ?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:c="http://www.springframework.org/schema/c"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="
                http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean   id="jmsConnectionFactory"
            class="org.springframework.jms.connection.CachingConnectionFactory"
            p:targetConnectionFactory-ref="activemqConnectionFactory"
            p:sessionCacheSize="10"
            p:cacheConsumers="true"
            p:cacheProducers="true"
    />
    
    <bean   id="jmsInternalConnectionFactory"
            class="org.springframework.jms.connection.CachingConnectionFactory"
            p:targetConnectionFactory-ref="activemqConnectionFactory"
            p:sessionCacheSize="10"
            p:cacheConsumers="true"
            p:cacheProducers="true"
    />
    
    <bean   id="activemqConnectionFactory"
            class="org.apache.activemq.ActiveMQConnectionFactory"
            p:brokerURL="tcp://localhost:61616"
    /> 
    
    <bean   id="genesisDestination"
            class="org.apache.activemq.command.ActiveMQQueue"
            c:_0="optima.retail.genesisMessage"
    />
    
    <bean   id="internalMessageDestination"
            class="org.apache.activemq.command.ActiveMQTopic"
            c:_0="optima.retial.controllerInbound"
    />
    
    <bean   id="batchDestination"
            class="org.apache.activemq.command.ActiveMQQueue"
            c:_0="optima.retail.batchProcessingRequest"
    />
    
    <bean   id="loggingQueueDestination"
            class="org.apache.activemq.command.ActiveMQQueue"
            c:_0="optima.retail.etl.exception.out"
    />       
    
</beans>