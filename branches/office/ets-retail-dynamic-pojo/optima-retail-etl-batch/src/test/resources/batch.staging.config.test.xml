<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config />

	<bean id="applicationProperties"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:retail.optima.etl.sql.queries.properties</value>
                <value>classpath:retail.optima.etl.logging.jms.properties</value>
                <value>classpath:retail.optima.etl.batch.datasource.props</value>
                <value>classpath:retail.optima.etl.batch.tibco.props</value>
            </list>
        </property>
    </bean>
    
	<import resource="/retail.optima.etl.batch.datasource.xml"/>
   <import resource="/retail.optima.etl.batch.dao.xml"/>
        
    <bean name="stagingDataPushTasklet"
		class="com.citi.retail.optima.etl.batch.tasklet.StagingDataPushTasklet">
		<property name="batchOutputDataPush" ref="batchOutputDataPush" />
		<property name="batchInstanceId" value="100" />
		<property name="processingUnitIdsString" value="1,2" />
		<property name="portfolioId" value="CA_OC1" />
	<!-- 	<property name="reportPeriod" value="java.util.Date" /> -->
	</bean>


	<bean	id="batchOutputDataPush"
			parent="abstractDao"
			class="com.citi.retail.optima.etl.batch.dao.impl.BatchOutputDataPushImpl"
	/>
</beans>    