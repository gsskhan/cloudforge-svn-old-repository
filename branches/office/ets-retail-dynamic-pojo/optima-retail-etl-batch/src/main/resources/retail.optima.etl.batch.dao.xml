<?xml version="1.0" encoding="UTF-8"?>

<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:p="http://www.springframework.org/schema/p"
		xsi:schemaLocation="
				http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean	id="abstractDao"
			abstract="true"
			p:jdbcTemplate-ref="jdbcTemplate"
	/>
				
	<bean	id="batchDetailsDao"
			parent="abstractDao"
			class="com.citi.retail.optima.etl.batch.dao.impl.BatchJobDetailsDaoImpl"
	/>

	<bean	id="jobInstanceDao"
			parent="abstractDao"
			class="com.citi.retail.optima.etl.batch.dao.impl.BatchJobInstanceDaoImpl"
	/>

	<bean	id="messageDao"
			parent="abstractDao"
			class="com.citi.retail.optima.etl.batch.dao.impl.BatchMessageDaoImpl"
	/>		
	
</beans>
