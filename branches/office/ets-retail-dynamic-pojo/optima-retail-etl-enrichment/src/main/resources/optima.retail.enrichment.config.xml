<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
							http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
							http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:annotation-config />
		
	<bean id="enrichmentRulesHolder"
		class="com.citi.retail.optima.etl.enrichment.EnrichmentRulesLoader"
		p:enrichmentRulesDao-ref="enrichmentRulesDao"  />

	<bean id="enrichmentRulesDao"
		class="com.citi.retail.optima.etl.enrichment.dao.impl.EnrichmentRulesDaoImpl"
		p:resultSetExtractor-ref="resultSetExtractor"
		p:jdbcTemplate-ref="jdbcTemplate" />
		
	<bean id="resultSetExtractor"
		class="com.citi.retail.optima.etl.enrichment.dao.impl.EnrichmentRulesResultSetExtractor"/>

	<!-- Custom Evaluation Context -->
	<bean id="evalContext"
		class="com.citi.retail.optima.etl.enrichment.support.EnrichmentCustomEvaluationContext"
		init-method="init" />	
		
		
</beans>	