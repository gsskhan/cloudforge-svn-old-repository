<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


<bean id="jndiTemplate" class="org.springframework.jndi.JndiTemplate">
	<property name="environment">
		<props>
			<prop key="java.naming.factory.initial">${ems.java.naming.factory.initial}</prop>
            <prop key="java.naming.provider.url">${ems.java.naming.provider.url}</prop>
            <prop key="java.naming.factory.url.pkgs">com.tibco.tibjms.naming</prop>
            <prop key="java.naming.security.principal">${ems.java.naming.security.principal}</prop>
			<prop key="com.tibco.tibjms.naming.security_protocol">${ems.java.security_protocol}</prop>
			<prop key="com.tibco.tibjms.naming.ssl_enable_verify_host">${ems.java.ssl_enable_verify_host}</prop>
			<prop key="com.tibco.tibjms.naming.ssl_identity">${ems.java.ssl_identity}</prop>
			<prop key="com.tibco.tibjms.naming.ssl_password">${ems.java.naming.ssl_password}</prop>
			<prop key="com.tibco.tibjms.ssl.password">${ems.ssl.password}</prop>
			<prop key="com.tibco.tibjms.naming.ssl_trusted_certs">${ems.java.naming.ssl_trusted_certs}</prop> 
			<prop key="com.tibco.tibjms.naming.ssl_trace">${ems.java.naming.ssl_trace}</prop>
			<prop key="com.tibco.tibjms.naming.ssl_debug_trace">${ems.java.naming.ssl_debug_trace}</prop>	
			<prop key="com.tibco.tibjms.naming.ssl_cipher_suites">${ems.java.naming.ssl_cipher_suites}</prop>		
		</props>
	</property>
</bean> 

<bean id="jndiConnectionFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
	<property name="jndiTemplate" ref="jndiTemplate" />
	<property name="jndiName" value="${ems.connectionfactory}" />
</bean>

<bean id="jmsConnectionFactory" class="com.citi.ets.publisher.common.CustomUserCredentialsConnectionFactory">
	<property name="targetConnectionFactory" ref="jndiConnectionFactory" />
	<property name="username" value="${ems.username}" /> 
  	<property name="ssl_keypass" value="${ems.ssl.key_pass}" /> 	
</bean>


<bean id="cachingConnectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">
	<property name="targetConnectionFactory" ref="jmsConnectionFactory" />
</bean> 

<bean id="jmsDestinationResolver" class="org.springframework.jms.support.destination.JndiDestinationResolver">
    <property name="jndiTemplate" ref="jndiTemplate" />
    <property name="cache" value="true" />
</bean>

<bean id="destination" class="org.springframework.jndi.JndiObjectFactoryBean">
    <property name="jndiTemplate" ref="jndiTemplate" />
    <property name="jndiName" value="${ems.queue}" />
</bean>

<bean id="jmsTransManager" class="org.springframework.jms.connection.JmsTransactionManager">
	<property name="connectionFactory" ref="cachingConnectionFactory" />
</bean>

<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
	<property name="connectionFactory" ref="cachingConnectionFactory" />
	<property name="destinationResolver" ref="jmsDestinationResolver" />
	<property name="defaultDestination" ref="destination" />
</bean>


</beans>
