<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-jms="http://www.springframework.org/schema/integration/jms"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-3.0.xsd
		http://www.springframework.org/schema/integration/jms http://www.springframework.org/schema/integration/jms/spring-integration-jms-3.0.xsd">

<int:channel id="inboundchannel" />
<int:channel id="xmlchannel" />

<int:inbound-channel-adapter id="inboundadapter"  ref="batchProcessor" method="process" channel="inboundchannel">
	<int:poller fixed-delay="60000" />
</int:inbound-channel-adapter>
<int:service-activator id="xmlservice" input-channel="inboundchannel" output-channel="xmlchannel"
						ref="xmlDataProcessor" method="generateXML" />
<int:service-activator id="messageservice" input-channel="xmlchannel"
						ref="xmlSendService" method="jmsXMLSender" />	
												
</beans>
