<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">


<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
	<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
	<property name="url" value="jdbc:oracle:thin:@vm-1ef6-7c0b.nam.nsroot.net:1522:cloudapp" />
	<property name="username" value="cloudapp" />
	<property name="password" value="Welcome1" />
	<property name="initialSize" value="1" />
</bean>

<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
	<property name="dataSource" ref="dataSource" />
	<property name="hibernateProperties">
		<props>
			<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
        	<prop key="hibernate.show_sql">false</prop>         
            <prop key="hibernate.format_sql">false</prop>   
            <prop key="hibernate.hbm2ddl.auto">none</prop>   
		</props>	
	</property>
	<property name="packagesToScan" value="com.citi.gpa.entity" />		
</bean>

<bean id="txManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
	<property name="sessionFactory" ref="sessionFactory" />
</bean>

<tx:annotation-driven transaction-manager="txManager" />

<bean id="genericDao" class="com.citi.gpa.dao.impl.GenericDaoImpl">
	<property name="sessionFactory" ref="sessionFactory" />
</bean>

</beans>
